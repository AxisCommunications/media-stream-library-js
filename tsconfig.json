{
  "compilerOptions": {
    /* Include Typescript declaration files */
    "declaration": true,
    "emitDeclarationOnly": true,

    /* Basic Options */
    "target": "es2015",
    "module": "ES2015",
    "outFile": "./dist/index.js",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "sourceMap": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "strictNullChecks": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
