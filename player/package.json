{
  "name": "media-stream-player",
  "version": "3.1.1",
  "description": "Player built on top of media-stream-library",
  "license": "MIT",
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "lint": "yarn lint:ts && yarn prettier:check",
    "lint:fix": "yarn lint:ts --fix && yarn reformat",
    "lint:ts": "eslint --ext .ts,.tsx . --cache",
    "lint:css": "stylelint \"./**/*.tsx\"",
    "prettier:check": "prettier --check 'lib/**/*.{js,ts,jsx,tsx}'",
    "prettier:fix": "prettier --write 'lib/**/*.{js,ts,jsx,tsx}' --fix --loglevel silent",
    "test": "jest --coverage --passWithNoTests",
    "dev:esm": "yarn tsc --watch",
    "dev:example": "webpack serve --config webpack.example.js --port 3554 --host localhost",
    "dev": "yarn build:esm && concurrently \"yarn dev:esm\" \"yarn dev:example\"",
    "build:esm": "yarn tsc",
    "build:bundle": "yarn webpack --config webpack.config.js && sbin/copyMinified.sh",
    "build": "yarn build:esm && yarn build:bundle",
    "release": "sbin/release.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AxisCommunications/media-stream-player-js"
  },
  "keywords": [
    "video",
    "live",
    "streaming",
    "rtsp",
    "ip",
    "camera"
  ],
  "dependencies": {
    "@juggle/resize-observer": "3.2.0",
    "debug": "4.3.2",
    "media-stream-library": "9.0.1",
    "react-hooks-shareable": "1.9.0"
  },
  "peerDependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-components": "5.2.0"
  },
  "devDependencies": {
    "@babel/cli": "7.12.10",
    "@babel/core": "7.12.10",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "7.12.1",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-react": "7.12.10",
    "@babel/preset-typescript": "7.12.7",
    "@types/debug": "4.1.5",
    "@types/jest": "26.0.20",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/styled-components": "5.1.7",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "babel-loader": "8.2.2",
    "concurrently": "5.3.0",
    "core-js": "3.8.2",
    "eslint": "7.17.0",
    "eslint-config-typescript-shareable": "0.26.0",
    "eslint-plugin-functional": "3.2.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "4.5.1",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-is": "17.0.1",
    "semver": "7.3.4",
    "style-loader": "1.3.0",
    "styled-components": "5.2.1",
    "stylelint": "13.8.0",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3",
    "webpack": "5.14.0",
    "webpack-cli": "4.3.1",
    "webpack-dev-server": "3.11.1"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)test)\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
